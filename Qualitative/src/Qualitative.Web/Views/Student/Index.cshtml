@using Qualitative.Models.Student
@model System.Collections.Generic.List<Qualitative.Models.Student.StudentModel>

@{
    ViewBag.Title = "Students";
}

<h2>Students</h2>
<a class="btn btn-success" asp-action="Create"> Create NEW </a>

<br>
<br>

<table class="table">
    <thread>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">
            <th>
        </tr>
    </thread>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>
                    <div class="row">
                        <div class="col-sm-6"></div>
                        <div class="col-sm-2"><a asp-action="Item" asp-route-id="@item.Id">Watch</a></div>
                        <div class="col-sm-2"><a asp-action="Update" asp-route-id="@item.Id">Edit</a></div>
                        <div class="col-sm-2"><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
